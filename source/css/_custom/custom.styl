//顶部条
.headband {
  height: 0px;
}
//修改默认按钮样式#bdc3c7
.post-button {
  text-align: right;
}
.btn {
  padding: 3px 15px
  color: #000 !important;
  background-color: #fff;
  border: 0px;
  border-radius: 15px;

  &:hover {
    color: #fff !important;
    background: #34495e;
    text-decoration: none !important;
  }

  +mobile(){
    background-color: #bdc3c7;
  }
}
//多级菜单栏
.sub-menu {
  //width: 40%;
  background: rgba(255, 255, 255, 1)!important;
  border-radius: 10px;
  -webkit-box-shadow: 0 0 14px #cacbcb;
  -moz-box-shadow: 0 0 14px #cacbcb;
  box-shadow: 0 0 14px #cacbcb;
  +mobile(){
    background: #fff!important;
    border-radius: 0px;
  }
}
.sub-menu .menu-item-active a {
  background: none!important;
  +mobile(){
    background: #fff!important;
  }
}
//菜单栏
.header-inner {
  background: rgba(255, 255, 255, 1);
  border-radius: 8px;
  +mobile(){
    background: white;
    border-radius: 0px;
    -webkit-box-shadow: 0 0 14px #cacbcb;
    -moz-box-shadow: 0 0 14px #cacbcb;
    box-shadow: 0 0 14px #cacbcb;
  }
}
.menu-item-active a {
  background: rgba(255,255,255.0.5);
  +mobile(){
    background: #fff;
  }
}
//侧栏（下方侧栏）
.sidebar{
  background: none;
  border-radius: 10px;
}
.sidebar-inner{
  padding: 10px 10px 10px;
  background: rgba(255,255,255,1);
  border-radius: 10px;
}
//选中文字的颜色
::selection {
    background: #285943;
    color: #fff;
}
// 自定义的文章摘要图片样式
img.img-topic {
    width: 100%;
}
// 代码自定义颜色
code {
    color: #ff7600;
    background: #fbf7f8;
    margin: 2px;
}
// 大代码块的自定义样式
.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border-radius: 3px;
}
/*--------------------------------------关于文章-------------------------/
/* 自定义的文章置顶样式 */
.post-sticky-flag {
    font-size: inherit;
    float: left;
    color: rgb(0, 0, 0);
    cursor: help;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
}
.post-sticky-flag:hover {
    color: #07b39b;
}
.highlight, code, pre {
    border: 1px solid #d6d6d6;
}
// 文章内链接文本样式
.post-body p a{
  color: #EC7357;
  border-bottom: none;
  border-bottom: 1px solid #EC7357;
  &:hover {
    color: #9055A2;
    border-bottom: none;
    border-bottom: 1px solid #9055A2;
  }
  &:active {
    color: #EC7357;
    border-bottom: none;
    border-bottom: 1px solid #EC7357;
  }
}
